<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="8dp"
              android:background="@color/light_green"> <!-- Fondo verde claro -->

    <TextView
            android:id="@+id/dateTextView"
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="wrap_content"
            android:text="@string/date_column"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:paddingEnd="8dp" android:textStyle="bold" android:singleLine="true"/>

    <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/score_column"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:paddingEnd="8dp" android:textStyle="bold" android:singleLine="true" android:gravity="center"/>

    <TextView
            android:id="@+id/difficultyTextView"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/difficulty"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:paddingEnd="8dp" android:textStyle="bold" android:singleLine="true" android:gravity="center"/>

    <TextView
            android:id="@+id/playerIdTextView"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:text="@string/player_column"
            android:textAllCaps="true"
            android:textSize="16sp" android:textStyle="bold" android:singleLine="true" android:gravity="center"/>
</LinearLayout>
