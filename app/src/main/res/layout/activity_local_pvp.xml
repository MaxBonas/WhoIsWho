<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/background_with_image">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            tools:context=".LocalPvPActivity">

        <!-- TextView para anunciar el turno -->
        <TextView
                android:id="@+id/current_player_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turno de Player 1"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

        <!-- RecyclerView para mostrar la lista de imágenes de los personajes -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/character_recycler_view_pvp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1" />

        <!-- Contenedor para Jugador 1 -->
        <LinearLayout
                android:id="@+id/player1_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
            <!-- Sección para el Jugador 1 -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <!-- Spinner para seleccionar la pregunta -->
                <Spinner
                        android:id="@+id/questions_spinner_p1"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@color/spinner_background"
                        android:entries="@array/questions"
                        android:textColor="@color/spinner_text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                <!-- Botón para hacer la pregunta -->
                <Button
                        android:id="@+id/ask_button_p1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ask_question_p1" />

                <TextView
                        android:id="@+id/timer_textview_p1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="02:00"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />
            </LinearLayout>

            <TextView
                    android:id="@+id/answer_textview_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible" />
        </LinearLayout>

        <!-- Contenedor para Jugador 2 -->
        <LinearLayout
                android:id="@+id/player2_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            <!-- Sección para el Jugador 2 -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <!-- Spinner para seleccionar la pregunta -->
                <Spinner
                        android:id="@+id/questions_spinner_p2"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@color/spinner_background"
                        android:entries="@array/questions"
                        android:textColor="@color/spinner_text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                <!-- Botón para hacer la pregunta -->
                <Button
                        android:id="@+id/ask_button_p2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ask_question_p2" />

                <TextView
                        android:id="@+id/timer_textview_p2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="02:00"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />
            </LinearLayout>

            <TextView
                    android:id="@+id/answer_textview_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            <ImageView
                    android:id="@+id/floating_image_view_pvp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:visibility="gone"
                    android:scaleType="centerInside"/>
        </LinearLayout>
        <Button
                android:id="@+id/end_turn_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finalizar turno" />

    </LinearLayout>
</FrameLayout>
